    ]
  },
  "dependencies": {
    "@prisma/client": "^5.9.1",
    "gren-lang": "^0.4.5",
    "prettynice": "file:../../../cli",
    "prisma": "^5.9.1"
  },
  "devDependencies": {
    "nodemon": "^3.1.0"
  }
}
